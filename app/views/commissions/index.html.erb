<h1>Commissions</h1>

<% unless @commissions.empty? %>
  <% @commissions.each do |c| %>
    <h4>
      <%= link_to c.title, c %>
      <% if c.private? %>
        <span class="uk-label">Private</span>
      <% end %>
    </h4>

    <p>
      <%= c.user.username if c.user %>
    </p>

    <p>
      <%= c.description %>
    </p>

    <p>
      <% if c.finished? %>
        <%= "Finished" %>
      <% elsif c.started? %>
        <%= "Started" %>
      <% else %>
        <%= "Not started" %>
      <% end %>
    </p>

    <hr>
  <% end %>
<% else %>
  <p>
    You don't have any commissions yet. Why not
    <%= link_to "create a new one?", new_commission_url %>
  </p>
<% end %>
