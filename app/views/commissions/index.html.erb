<h1>Commissions</h1>

<% unless @commissions.empty? %>
  <% @commissions.each do |c| %>
    <div class="uk-card uk-card-default">
      <div class="uk-card-body">
        <%= image_tag c.thumbnail if c.files.attached? %>
      </div>
      <div class="uk-card-footer">
        <h4>
          <%= link_to c.title, c %>
          <% if c.private? %>
            <span class="uk-label">Private</span>
          <% end %>
        </h4>
        <p>
          <%= c.user.username %>
        </p>
        <p>
          <%= c.description %>
        </p>
        <p>
          <% if c.finished? %>
            <%= "Finished" %>
          <% elsif c.started? %>
            <%= "Started" %>
          <% else %>
            <%= "Not started" %>
          <% end %>
        </p>
      </div>
    </div>
  <% end %>
<% else %>
  <p>
    You don't have any commissions yet. Why not
    <%= link_to "create a new one?", new_commission_url %>
  </p>
<% end %>
