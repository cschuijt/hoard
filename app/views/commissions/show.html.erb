<h1>
  <%= @commission.title %>
</h1>
<p>
  <%= @commission.description %>
</p>

<p>
  <% unless @commission.finished? %>
    <% if @commission.started? %>
      <%= "Commission started " %>
      <%= time_ago_in_words(@commission.started_at) + " ago." if @commission.started_at %>
    <% else %>
      <%= "Commission not yet started." %>
    <% end %>
  <% else %>
    <%= "Commission finished " %>
    <%= time_ago_in_words(@commission.finished_at) + " ago." if @commission.finished_at %>
  <% end %>
</p>
