<div class="uk-margin-small-bottom">
  <h1>Welcome, <%= current_user.name %>!</h1>
  <p class="uk-text-lead">Where to next?</p>
</div>


<div uk-height-match=".uk-card-body">
  <div class="uk-grid-medium" uk-grid uk-height-match=".uk-card">
    <div class="uk-width-1-1@s uk-width-1-2@m uk-width-1-3@l">
      <%= render partial: 'pages/landing/card', locals: { commissions: @ideas, type: :ideas } %>
    </div>

    <div class="uk-width-1-1@s uk-width-1-2@m uk-width-1-3@l">
      <%= render partial: 'pages/landing/card', locals: { commissions: @progress, type: :wips } %>
    </div>

    <div class="uk-width-1-1@s uk-width-1-2@m uk-width-1-3@l">
      <%= render partial: 'pages/landing/card', locals: { commissions: @unsorted, type: :unsorted } %>
    </div>

    <div class="uk-width-1-1@s uk-width-1-2@m uk-width-1-1@l">
      <div class="uk-height-medium">
        <h5>Or, browse your collection:</h5>

        <div class="uk-child-width-auto" uk-grid>
          <% @folders.each do |folder| %>
            <div>
              <div class="uk-panel uk-text-center">
                <%= link_to folder, class: "uk-link-toggle" do %>
                  <span uk-icon="icon: folder; ratio: 2"></span>
                  <p>
                    <b class="uk-link-heading"><%= folder.title %></b>
                    <span class="uk-badge"><%= folder.filings.count %></span>
                  </p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
